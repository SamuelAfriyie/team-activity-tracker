{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/js/*"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "vite-env.d.ts",
    "resources/js/**/*",
    "vite.config.ts",
  ],
  // "exclude": [
  //   "node_modules",
  //   "vendor"
  // ]
}